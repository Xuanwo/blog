---
import { getTranslation, loadSite } from '../lib/site-data'
import LucideIcon from './LucideIcon.astro'

const site = loadSite()
const footer = (site.menu.footer ?? []).slice().sort((a, b) => (a.weight ?? 0) - (b.weight ?? 0))
const icons = (site.menu.icon ?? []).slice().sort((a, b) => (a.weight ?? 0) - (b.weight ?? 0))
---

<header class="mx-auto pb-4">
  <h1 class="text-center lg:text-left text-4xl text-gray-900 dark:text-gray-100 font-medium m-0">
    <a class="text-gray-900 dark:text-gray-100" href="/">{getTranslation('site_title')}</a>
  </h1>
  <div class="lg:flex text-center justify-between">
    <p class="text-lg text-gray-600 dark:text-gray-400">{getTranslation('site_description')}</p>
    <nav class="my-auto">
      <ul class="justify-center flex flex-wrap list-disc list-inside">
        {icons.map((item) => (
          <li class="list-none mx-2">
            <a class="text-gray-600 dark:text-gray-400 text-2xl" href={item.url} aria-label={item.name}>
              <LucideIcon name={item.name} />
            </a>
          </li>
        ))}
      </ul>
    </nav>
  </div>
  <nav class="text-center border-t border-b border-gray-200 dark:border-gray-700 px-1 mt-4">
    <ul class="list-disc list-inside">
      {footer.map((item) => (
        <li class="inline-block list-none mx-4">
          <a href={item.url}>{getTranslation(item.name)}</a>
        </li>
      ))}
    </ul>
  </nav>
</header>
