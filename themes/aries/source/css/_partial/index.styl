#pagination
  a
    display block
    padding 5px 10px
    font-family font-title
    text-shadow 0 0 1px #fff
    margin-bottom 25px
    border-radius 3px
    font-size 1em
    font-weight bold
    text-decoration none
    text-transform uppercase
    &:hover
      background color-link
      color #fff
      text-decoration none
      text-shadow none

  .prev
    &:before
      content '\f053'
      padding-right 10px
      font-family font-icon

  .next
    &:after
      content '\f054'
      padding-left 10px
      font-family font-icon
