.archive-head
  color color-meta
  font-weight normal
  margin-bottom 10px
  text-shadow 0 0 1px #fff
  &:before
    font-family font-icon
    content '\f073'
    padding-right 15px

  &.tag
    &:before
      content '\f02b'

  &.category
    &:before
      content '\f07b'

.archive-title
  color color-link
  font-size 20px
  margin-top 5px
  margin-bottom 5px 
  text-shadow 0 0 1px #fff
  a 
    &:hover
  	  text-decoration none 

  &:before
    font-family font-icon
    content '\f0ce'

  &.tag
    &:before
      content '\f02b'

  &.category
    &:before
      content '\f07b'


.archive_item
  margin-left 25px 
  line-height 1.6
  .item_split
    padding 0 5px 0 5px
    &:before
      font-family font-icon
      content '\f101'


.archive
  margin-bottom 10px

