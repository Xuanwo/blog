#container
  width: 940px
  margin-left: auto
  margin-right: auto

#main
  padding-left: 200px

.post
  margin-bottom: 5em
  position: relative
  
  .entry-header
    margin-bottom: 2em
  
  .entry-title
    font-weight: bold
    font-size: 220%
    margin: 0

.article-devider
  width: 8%
  margin: 5em auto
  border: 0
  border-top: 5px solid #ddd

.entry-meta-header
  position: absolute
  top: .5em
  left: -200px
  width: 180px
  font-size: 85%
  a
    color: color-default
    &:hover
      color: color-link

  .meta-elements
    display: block
    margin-bottom: .5em

  .date
    font-weight: bold
    font-size: 120%
    a
      color: color-title
      &:hover
        color: color-link

  .commentscount
    font-size: 90%
    margin-top: 1.5em

.entry-content
  font-size: 105%
  line-height: line-height
  margin-bottom: 2em
  .title
    &.link
      a
        &:after
          content '\f08e'
          color color-meta
          font 12px font-icon
          padding-left 10px
          vertical-align super
  p
    margin: 0 0 1em 0
  img, video
    max-width: 100%
    height: auto
    display: block
    margin: auto
  a[title*="Flickr"] img
    height: auto!important
  h1, h2, h3, h4, h5, h6
    margin: 1em 0 .8em 0
    line-height: 1.5
  h1
    font-size: 170%
  h2
    font-size: 160%
  h3
    font-size: 140%
  h4
    font-size: 130%
  h5
    font-size: 110%
  h6
    font-size: 100%
  dt
    font-weight: bold
  ul
    list-style: disc !important
  ol
    list-style: decimal !important
  ul, ol, dl
    margin: 0 0 1em 1.5em
    padding: 0
    li ul, li ol
      margin-bottom: 0

  table
    margin: 0
    width: auto
    border-collapse: collapse
    border-spacing: 0

  th
    font-weight: bold
    border-bottom: 3px solid color-border
    padding-bottom: 0.5em

  td
    border-bottom: 1px solid color-border
    padding: 10px 0

  blockquote
    font-family: font-serif
    margin: 1.5em 3em
    padding: 5px 20px
    border-left: 2px solid #aaa
    color: color-footer
    p:last-child
      margin-bottom: 0
    footer
      font-size: font-size
      font-family: font-sans
      cite
        &:before
          content: "â€”"
          padding: 0 0.5em

  .pullquote
    border-left: 0
    font-family: font-serif
    text-align: left
    width: 45%
    margin: 10px 0 0 0
    .left
      margin-left: 0.5em
      margin-right: 1em
    .right
      margin-right: 0.5em
      margin-left: 1em
  
  .caption
    color: color-default
    display: block
    font-size: 0.9em
    margin-top: 0.5em
    position: relative
    text-align: center

  .video-container
    position: relative
    padding-top: (9 / 16 * 100)% // 16:9 ratio
    height: 0
    overflow: hidden
    iframe, object, embed
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%
      margin-top: 0

  pre
    padding: 15px
    background: #f5f5f5
    border: 0
    border-bottom-right-radius: 0
    border-bottom-left-radius: 0
    border-top-left-radius: 0
    border-radius: 3px
    background-clip: padding-box
    word-wrap: normal
    overflow-x: auto
    font-size: 100%
    line-height: 1.3

  hr
    width: 20%
    margin: 3em auto
    border: 0
    border-top: 3px solid #d5d5d5

.entry-meta-footer
  font-size: 85%
  color: color-footer
  line-height: 1.5
  margin-bottom: 1.5em
  a
    color: color-footer
    &:hover
      color: color-link

  li
    list-style-type: none

  span
    line-height: line-height

  .category a
    margin-left: 5px
    margin-right: 5px
    &:first-child
      margin-left: 0
    &:last-child
      margin-right: 0

  .meta
    margin-bottom: .7em

.article-tag-list
  padding: 0

.article-tag-list-item
  float: left
  margin-right: 10px

  &:before
    content: "#"